generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String    @db.VarChar(50)
  email     String    @unique @db.VarChar(50)
  password  String    @db.VarChar(100)
  phone     String    @db.VarChar(15)
  role      Role      @default(PATIENT)
  age       Int       @db.Integer
  gender    Gender
  address   Json?     @db.Json
  bio       String?   @db.VarChar(500)
  image     String?   @db.VarChar(100)
  weight    Float?    @db.DoublePrecision
  height    Float?    @db.DoublePrecision
  bloodType String?   @db.VarChar(5)
  birthDate DateTime? @db.Date
  isActive  Boolean?  @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  patients      User[] @relation("ProfessionalToPatients")
  professionals User[] @relation("PatientToProfessionals")

  UserPatient      User[] @relation("ProfessionalToPatients")
  UserProfessional User[] @relation("PatientToProfessionals")
}

enum Role {
  PROFESSIONAL
  PATIENT
  ADMIN
}

enum Gender {
  MALE
  FEMALE
  OTHER
}
