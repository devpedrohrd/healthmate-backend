generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ProfissionalSaude {
  id            Int         @id @default(autoincrement())
  nome          String      @db.VarChar(100)
  email         String      @unique @db.VarChar(100)
  senha         String      @db.VarChar(255)
  especialidade String?     @db.VarChar(100)
  Pacientes     Paciente[]
  LinkUnico     LinkUnico[]
  Relatorio     Relatorio[]
}

model Paciente {
  id             Int                 @id @default(autoincrement())
  nome           String              @db.VarChar(100)
  email          String              @unique @db.VarChar(100)
  telefone       String?             @db.VarChar(15)
  endereco       Json                @db.Json
  Profissional   ProfissionalSaude[]
  Medicamento    Medicamento[]
  AvaliacaoSaude AvaliacaoSaude[]
  Relatorio      Relatorio[]
}

model Medicamento {
  id         Int        @id @default(autoincrement())
  pacienteId Int        @map("paciente_id")
  nome       String     @db.VarChar(100)
  descricao  String?
  dosagem    String?    @db.VarChar(50)
  horario    String?    @db.VarChar(50)
  quantidade Int        @default(0)
  paciente   Paciente   @relation(fields: [pacienteId], references: [id])
  Lembrete   Lembrete[]
}

model Lembrete {
  id            Int         @id @default(autoincrement())
  medicamentoId Int         @map("medicamento_id")
  horaLembrete  String?     @map("hora_lembrete")
  titulo        String?     @db.VarChar(100)
  mensagem      String?     @db.VarChar(255)
  status        String      @default("pendente") @db.VarChar(20)
  medicamento   Medicamento @relation(fields: [medicamentoId], references: [id])
}

model AvaliacaoSaude {
  id                Int      @id @default(autoincrement())
  pacienteId        Int      @map("paciente_id")
  sintomas          String?
  efeitosColaterais String?  @map("efeitos_colaterais")
  observacoes       String?
  paciente          Paciente @relation(fields: [pacienteId], references: [id])
}

model Relatorio {
  id                  Int               @id @default(autoincrement())
  pacienteId          Int               @map("paciente_id")
  profissionalSaudeId Int               @map("profissional_saude_id")
  conteudoRelatorio   String?           @map("conteudo_relatorio")
  paciente            Paciente          @relation(fields: [pacienteId], references: [id])
  profissionalSaude   ProfissionalSaude @relation(fields: [profissionalSaudeId], references: [id])
}

model LinkUnico {
  id                  Int               @id @default(autoincrement())
  profissionalSaudeId Int               @map("profissional_saude_id")
  link                String            @db.VarChar(255)
  status              String            @default("ativo") @db.VarChar(20)
  profissionalSaude   ProfissionalSaude @relation(fields: [profissionalSaudeId], references: [id])
}
