{
  "openapi": "3.0.0",
  "info": {
    "title": "API do HealthMate",
    "version": "1.0.0",
    "description": "API para gerenciamento no projeto de aplicação web"
  },
  "tags": [
    {
      "name": "Profissional",
      "description": "Operações relacionadas a profissionais de saúde"
    }
  ],
  "paths": {
    "/api/profissional": {
      "post": {
        "tags": ["Profissional"],
        "summary": "Adiciona um novo profissional",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Profissional"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Profissional criado com sucesso"
          },
          "400": {
            "description": "Erro de validação ou profissional já existe"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      },
      "get": {
        "tags": ["Profissional"],
        "summary": "Retorna uma lista de todos os profissionais",
        "responses": {
          "200": {
            "description": "Lista de profissionais retornada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Profissional"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Nenhum profissional encontrado"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    },
    "/api/profissional/{id}": {
      "get": {
        "tags": ["Profissional"],
        "summary": "Retorna um profissional específico",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Profissional retornado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Profissional"
                }
              }
            }
          },
          "404": {
            "description": "Profissional não encontrado"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      },
      "put": {
        "tags": ["Profissional"],
        "summary": "Atualiza as informações de um profissional",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Profissional"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Profissional atualizado com sucesso"
          },
          "400": {
            "description": "Erro de validação"
          },
          "404": {
            "description": "Profissional não encontrado"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      },
      "delete": {
        "tags": ["Profissional"],
        "summary": "Remove um profissional",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Profissional deletado com sucesso"
          },
          "404": {
            "description": "Profissional não encontrado"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Profissional": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "nome": {
            "type": "string",
            "example": "João Silva"
          },
          "email": {
            "type": "string",
            "example": "joao.silva@example.com"
          },
          "senha": {
            "type": "string",
            "example": "senha123"
          },
          "contato": {
            "type": "string",
            "example": "123456789"
          },
          "especialidade": {
            "type": "string",
            "example": "Cardiologia"
          }
        },
        "required": ["nome", "email", "senha"]
      }
    }
  }
}
